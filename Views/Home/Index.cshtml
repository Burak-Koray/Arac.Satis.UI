@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mb-2" ng-controller="HomeController">

    <div class="col-md-6" ng-repeat="vehicle in vehicleList">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary">{{vehicle.category.name}}</strong>
                <h3 class="mb-2">{{vehicle.title}}</h3>
                <div class="mb-1 text-muted">{{vehicle.createdDate | date:'dd-MM-yyyy'}}</div>
                <p class="card-text mb-auto" ng-bind-html="trustAsHtml(vehicle.content)" style="max-height: 100px;overflow: hidden;"></p>
                <a href="/vehicle/Index?Id={{vehicle.id}}" class="stretched-link">Okumaya Devam Et</a>
            </div>
            <div class="col-auto d-none d-lg-block">
                <img width="200" height="250" ng-show="vehicle.fileName!=''" src="https://localhost:7165/{{vehicle.fileName}}" />
                <img width="200" height="250" ng-show="vehicle.fileName==''" src="https://localhost:7165/null.jpg" />
            </div>
        </div>
    </div>


    <div class="col-md12 mt-5 mb-5 text-center" ng-show="vehicleList.length<1">
        <h2> İLAN BULUNMAMAKTADIR </h2>
    </div>

</div>

@section Scripts{
    <script src="~/page/home.js"></script>
}

